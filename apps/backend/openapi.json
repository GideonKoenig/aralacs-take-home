  "components": {
    "schemas": {
      "TriggerProcessRequest": {
        "type": "object",
        "properties": {
          "processId": {
            "type": "string",
            "enum": [
              "1",
              "2",
              "3"
            ]
          }
        },
        "required": [
          "processId"
        ]
      },
      "Person": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "maxBorrowableCents": {
            "type": "number",
            "nullable": true
          },
          "netWorthCents": {
            "type": "number",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "email"
        ]
      },
      "BankAccount": {
        "type": "object",
        "properties": {
          "iban": {
            "type": "string"
          },
          "balanceCents": {
            "type": "number"
          },
          "personId": {
            "type": "number"
          }
        },
        "required": [
          "iban",
          "balanceCents",
          "personId"
        ]
      },
      "NetWorth": {
        "type": "object",
        "properties": {
          "personId": {
            "type": "number"
          },
          "netWorthCents": {
            "type": "number"
          }
        },
        "required": [
          "personId",
          "netWorthCents"
        ]
      },
      "Borrowable": {
        "type": "object",
        "properties": {
          "personId": {
            "type": "number"
          },
          "borrowableCents": {
            "type": "number"
          }
        },
        "required": [
          "personId",
          "borrowableCents"
        ]
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "accountIban": {
            "type": "string"
          },
          "counterpartyIban": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          },
          "direction": {
            "type": "string",
            "enum": [
              "debit",
              "credit"
            ]
          },
          "loadedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "accountIban",
          "counterpartyIban",
          "amount",
          "direction",
          "loadedAt"
        ]
      }
    }
  }
