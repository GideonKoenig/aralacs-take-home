{
    "name": "@scalara/db",
    "type": "module",
    "packageManager": "yarn@4.9.4",
    "files": [
        "dist"
    ],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc -p .",
        "dev": "tsc -w -p .",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
        "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
        "start": "tsx ./scripts/start-database.ts",
        "seed": "tsx ./scripts/seed-gremlin.ts",
        "typeorm": "typeorm-ts-node-esm",
        "generate": "yarn typeorm migration:generate -d ./src/postgres.ts ./src/postgres-migrations/Migration",
        "push": "yarn typeorm migration:run -d ./src/postgres.ts"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "import": "./dist/*.js"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "dist/*"
            ],
            "": [
                "dist/index.d.ts"
            ]
        }
    },
    "dependencies": {
        "@t3-oss/env-core": "^0.13.8",
        "gremlin": "^3.7.4",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.26",
        "zod": "^4.1.8"
    },
    "devDependencies": {
        "@types/gremlin": "^3.6.7",
        "@types/node": "^24.3.1",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.0.1",
        "globals": "^16",
        "prettier": "^3",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "typeorm-ts-node-esm": "^0.3.20",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.27.0"
    }
}
