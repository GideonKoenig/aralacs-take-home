{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "noEmit": false,
        "verbatimModuleSyntax": false,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "."
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
